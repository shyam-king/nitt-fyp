FROM python
RUN apt update
RUN apt install cron -y
RUN pip install pipenv

# install dependencies
WORKDIR /usr/src/app
COPY app/Pipfile ./Pipfile
COPY app/Pipfile.lock ./Pipfile.lock
RUN pipenv install 

# environment
ENV PYTHONPATH=/usr/src/app

#copy src
WORKDIR /usr/src
COPY . .


WORKDIR /usr/src/app
RUN chmod +x ./peer.sh
CMD ["/bin/bash", "/usr/src/app/peer.sh"]